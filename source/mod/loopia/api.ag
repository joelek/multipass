route sendRequest(): POST:/RPCSERV <= binary => binary;

guard Status:
	"OK" |
	"AUTH_ERROR" |
	"DOMAIN_OCCUPIED" |
	"RATE_LIMITED" |
	"BAD_INDATA" |
	"UNKNOWN_ERROR" |
	"INSUFFICIENT_FUNDS";

