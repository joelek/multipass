	"domain": string,
	"paid": boolean,
	"registered": boolean,
	"reference_no": integer,
	"renewal_status": "NORMAL" | "DEACTIVATED" | "NOT_HANDLED_BY_LOOPIA",
	"expiration_date": string
};

guard getDomainsRequest: {
	methodName: "getDomains",
	parameters: [
		string,
